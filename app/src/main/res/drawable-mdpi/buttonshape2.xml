<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape
            android:shape="rectangle" >

            <corners android:radius="5dip" />

            <gradient
                android:angle="90"
                android:centerColor="#F4511E"
                android:centerY="0.5"
                android:endColor="#F4511E"
                android:startColor="#F4511E"
                android:type="linear" />

        </shape>
    </item>

    <item android:state_pressed="false" >
        <shape
            android:shape="rectangle" >

            <corners android:radius="5dip" />

            <gradient
                android:angle="90"
                android:centerColor="#FF8A65"
                android:centerY="0.5"
                android:endColor="#FF8A65"
                android:startColor="#FF8A65"
                android:type="linear" />

        </shape>
    </item>
</selector>

